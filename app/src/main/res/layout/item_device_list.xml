<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:id="@+id/nView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/deviceRssiView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/deviceNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:maxLength="10"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/deviceAddressView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="10"
            android:hint="address"
            android:paddingLeft="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/nView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/xView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="name"
            android:paddingLeft="16dp" />

        <TextView
            android:id="@+id/yView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="address"
            android:paddingLeft="16dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/deviceRssiView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="rssi"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/distanceView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/distanceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="distance"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>